<%-  include("partials/header.ejs") %>
<div class="content">
    <h1 class="search-title">Search Your Pokemon!</h1>
    <form action="/search" method="POST">
        <div class="input-wrapper">
            <span class="ghost"></span>
            <input type="text" name="name" id="PokemonName" placeholder="Pokemon Name Here!" class="text-input">
        </div>
        <% if (locals.error) {%>
            <p><%= error %></p>
            <% } %>
        <input type="submit" name="" id="" value="Search!" class="submit">
    </form>
</div>
